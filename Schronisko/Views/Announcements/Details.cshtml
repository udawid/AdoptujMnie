<div class="row">
    <section class="col-lg-3 mt-3">
        <div class="row">
            <div class="col-6 col-lg-12">
                <h6><i class="bi bi-calendar-event me-1">Opublikowano:</i>@Model.AddedDate.ToString("dd.MM.yyyy")</h6>
            </div>
        </div>
    </section>
    <!--Zdjęcie i treść-->
    <section class="col-lg-9">
        <h1>@Model.Title</h1>
        @{
            if (!String.IsNullOrEmpty(Model.Photo))
            {
            <img class="img-fluid mt-3" src="~/graphic/Announcement/@Model.Photo">
            }
            else
            {
            <hr />
            }
        }
        <hr />
            @Html.Raw(Model.AnnouncementText)
        <hr />
    </section>
</div>
